---
import '@unocss/reset/tailwind.css'

// TODO: remove

---

<main class="min-h-screen w-screen grid place-content-center bg-neutral-200 relative" >
  <!-- <div class="w-96 h-96 bg-purple absolute top-80 left-100">

  </div> -->

  <div class="w-360 h-270 bg-white grid grid-rows-3 grid-cols-4 place-content-center grid-container" >

    <!-- 0/1 -->

    <div class="col-span-2 repeating-bg" >

      <div class="container-classes" >
        <span>
          fade-x-[50%]
        </span>
      </div>

      <div class="text-[6rem] font-bold fade-x-[50%]" >
        css-fade
      </div>

    </div>

        <!-- 0/2 -->

        <div class="col-span-2 repeating-bg" >

          <div class="container-classes" >
            <span>
              <strong>without css-fade:</strong>&nbsp; linear gradient edges visible due to background
            </span>
          </div>
    
          <div class="text-[6rem] font-bold relative" >
            css-fade
            <div class="absolute inset-0 bg-gradient-to-r from-white via-transparent to-white" ></div>
          </div>
    
        </div>

    <!-- 1 -->
    <div>

      <div class="container-classes" >
        <span>
          fade-x-30
        </span>
      </div>

      <div class="h-60 w-60 fade-x-30 overflow-hidden relative flex flex-col items-center justify-center" >

          <span class="font-[Helvetica] text-black text-4xl text-nowrap" >
            Nested HTML Element
          </span>
          <span class="font-[Helvetica] text-black text-4xl text-nowrap" >
            Element Nested HTML
          </span>
          <span class="font-[Helvetica] text-black text-4xl text-nowrap" >
            HTML Element Nested
          </span>

      </div>
      
    </div>

    <!-- 2 -->
    <div>

      <div class="container-classes" >
        <span>
          fade-30
        </span>
      </div>

      <div class="h-60 w-60 fade-30 overflow-hidden relative flex flex-col items-center justify-center" >

          <span class="font-[Helvetica] text-black text-4xl text-nowrap" >
            Nested HTML Element
          </span>
          <span class="font-[Helvetica] text-black text-4xl text-nowrap" >
            Element Nested HTML
          </span>
          <span class="font-[Helvetica] text-black text-4xl text-nowrap" >
            HTML Element Nested
          </span>
          <span class="font-[Helvetica] text-black text-4xl text-nowrap" >
            Nested HTML Element
          </span>
          <span class="font-[Helvetica] text-black text-4xl text-nowrap" >
            Element Nested HTML
          </span>
          <span class="font-[Helvetica] text-black text-4xl text-nowrap" >
            HTML Element Nested
          </span>
          
          <div class="absolute left-4/10 top-4/10 rounded-full outline-2 outline-solid outline-white bg-neutral-900 w-40 h-40 flex items-center justify-center" >
          
            <div class="w-24 h-24 text-white -rotate-20" >
              <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 256 256"><path fill="currentColor" d="M216 64v90.93c0 46.2-36.85 84.55-83 85.06a83.7 83.7 0 0 1-60.4-24.59C50.79 192.33 26.15 136 26.15 136a16 16 0 0 1 6.53-22.23c7.66-4 17.1-.84 21.4 6.62l21 36.44a6.09 6.09 0 0 0 6 3.09h.12a8.19 8.19 0 0 0 6.8-8.18V48a16 16 0 0 1 16.77-16c8.61.4 15.23 7.82 15.23 16.43V112a8 8 0 0 0 8.53 8a8.17 8.17 0 0 0 7.47-8.25V32a16 16 0 0 1 16.77-16c8.61.4 15.23 7.82 15.23 16.43V120a8 8 0 0 0 8.53 8a8.17 8.17 0 0 0 7.47-8.25v-55.3c0-8.61 6.62-16 15.23-16.43A16 16 0 0 1 216 64"/></svg>
            </div>

          </div>

      </div>

    </div>

    <!-- 3 -->
    <div>

      <div class="container-classes" >
        <span>
          fade-x-12
        </span>
        <span>
          fade-y-24
        </span>
      </div>

      <div class="h-60 w-60 fade-x-12 fade-y-24 overflow-hidden relative" >

        <div class="bg-gradient-to-b from-purple to-blue h-60 w-full" >
    
        </div>

      </div>
      
    </div>

    <!-- 4 -->
    <div>

      <div class="container-classes" >
        <span>
          fade-x-12
        </span>
        <span>
          fade-y-[50%]
        </span>
      </div>
  
      <div class="h-60 w-60 fade-x-12 fade-y-[50%] overflow-hidden relative" >
  
        <div class="bg-gradient-to-b from-purple to-blue h-60 w-full" >
      
        </div>
  
      </div>
  
    </div>

    <!-- 5 -->
    <div>

      <div class="container-classes" >
        <span>
          fade-tl-24
        </span>
      </div>
  
      <div class="h-60 w-60 fade-tl-24 overflow-hidden relative" >
  
        <div class="bg-gradient-to-tr from-purple to-blue h-60 w-full" >
      
        </div>
  
      </div>

    </div>

    <!-- 6 -->
    <div>

      <div class="container-classes" >
        <span>
          fade-y-24
        </span>
        <span>
          fade-from-40
        </span>
      </div>

      <div class="h-60 w-24 flex flex-col items-center justify-center overflow-hidden fade-y-24 space-y-4" >

        <div class="bg-black rounded-full w-20 h-40 shrink-0" ></div>
        <div class="outline-4 outline-solid outline-black rounded-full w-20 h-10 shrink-0" ></div>
        <div class="outline-4 outline-solid outline-black rounded-full w-20 h-10 shrink-0" ></div>

      </div>

      <div class="h-60 w-24 flex flex-col items-center justify-center overflow-hidden fade-y-24 fade-from-40 space-y-4" >

        <div class="outline-4 outline-solid outline-black rounded-full w-20 h-10 shrink-0" ></div>
        <div class="bg-black rounded-full w-20 h-20 shrink-0" ></div>
        <div class="outline-4 outline-solid outline-black rounded-full w-20 h-30 shrink-0" ></div>

      </div>
      
    </div>

    <!-- 7 -->
    <div>

      <div class="container-classes" >
        <span>
          fade-y-24
        </span>
      </div>

      <div class="h-60 w-24 flex flex-col items-center justify-center overflow-hidden fade-y-24 space-y-4" >

        <div class="outline-4 outline-solid outline-black rounded-full w-20 h-30 shrink-0" ></div>
        <div class="outline-4 outline-solid outline-black rounded-full w-20 h-20 shrink-0" ></div>
        <div class="outline-4 outline-solid outline-black rounded-full w-20 h-10 shrink-0" ></div>

      </div>

      <div class="h-60 w-24 flex flex-col items-center justify-center overflow-hidden fade-y-24 space-y-4" >

        <div class="outline-4 outline-solid outline-black rounded-full w-20 h-20 shrink-0" ></div>
        <div class="outline-4 outline-solid outline-black rounded-full w-20 h-20 shrink-0" ></div>
        <div class="bg-black rounded-full w-20 h-20 shrink-0" ></div>

      </div>
      
    </div>

    <!-- 8 -->
    <div>

      <div class="container-classes" >
        <span>
          ...fade-*
        </span>
      </div>
  
      <div class="h-72 w-72 relative flex items-center justify-center" >
  
        <div class="bg-gradient-to-tr from-purple to-blue h-72 w-72 absolute fade-36" ></div>

      </div>

    </div>

  </div>

</main>

<style>

  .repeating-bg {
    background-color: #ffffff;
    background-image: url("./bg-image.svg");
    background-size: 2%;
  }

  .grid-container {
    --uno: "overflow-hidden"
  }

  .grid-container > * {
    --uno: "h-full w-full flex items-center justify-center outline-1 outline-solid outline-neutral-100 relative overflow-hidden"
  }

  .grid-container > * > :not(.container-classes) {
    --uno: "relative"
  }

  .grid-container > * > .container-classes {
    --uno: "absolute bottom-4 w-4/5 flex justify-center flex-wrap gap-2 z-10"
  }

  .grid-container > * > .container-classes > span {
    --uno: "py-.5 px-3 rounded-full outline-1 outline-solid outline-white/10 inline-flex text-black items-center shrink-0 bg-black/5"
  }

  /* .animate {
    animation: animate 3s infinite ease-in-out alternate;
  } */

  @keyframes animate {

    0% {
      transform: translateY(0%);
    }

    100% {
      transform: translateY(-75%);
    }

  }

</style>